<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>İlanlarım</title>
    <link rel="stylesheet" href="/css/myadverts.css">
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
<script>
    jQuery(document).ready(function($){
	//open popup
	$('.cd-popup-trigger').on('click', function(event){
		event.preventDefault();
		$('.cd-popup').addClass('is-visible');
	});
	
	//close popup
	$('.cd-popup').on('click', function(event){
		if( $(event.target).is('.cd-popup-close') || $(event.target).is('.cd-popup') ) {
			event.preventDefault();
			$(this).removeClass('is-visible');
		}
	});
	//close popup when clicking the esc keyboard button
	$(document).keyup(function(event){
    	if(event.which=='27'){
    		$('.cd-popup').removeClass('is-visible');
	    }
    });
});
</script>

</head>
<body>
      <!--HEADER-->
      
      <%- include('partials/_header') %>

    
    <div class="main-ilan">
        <div class="ilan-cards">
         <!--Adverts-->
         <% for(advert of adverts) {%>
             <div class="ilan-card">
                 <div class="ilan-card-top">
                     <div class="ilan-card-top-profile">
                         <img style="border-radius: 50%; object-fit : cover;" src="/img/other/ilan-2.jpeg" alt="">
                         <div style="width: 290px;" class="ilan-card-top-profile-text">
                             <p href="#" style=" overflow-wrap: break-word;"><%= advert.title %></p>
                             <span><%= advert.category %></span>
                         </div>
                     </div>
                 </div>
 
                 <div class="ilan-card-mid">
                    <p  style="  max-height: 80px; overflow-wrap: break-word;"><%= advert.detail_short.substring(0,150) + "..." %></p>
                    <div class="line"></div>
                    <p style="  height: 130px; overflow-wrap: break-word;"><%= advert.detail_long.substring(0,300) + "..." %></p>

                </div>
                
                 <div class="ilan-card-bottom">
                     <a id="duzenle" href="/profile/myadverts/<%= advert._id %>"> Düzenle </a>
                     <a id="sil" href="/profile/myadverts/<%= advert._id  %>/?_method=DELETE">Sil</a>
                    <!-- <a href="#0" id="sil" class="cd-popup-trigger">Sil</a> -->
                 </div>

                
                <div class="cd-popup" role="alert">
                    <div class="cd-popup-container">
                        <p>İlanı silmek istediğinize eminmisiniz</p>
                        <ul class="cd-buttons">
                            <li><a href="/profile/myadverts/<%= advert._id  %>/?_method=DELETE">Evet</a></li>
                            <li><a href="/profile/myadverts">Hayır</a></li>
                        </ul>
                        <a href="#0" class="cd-popup-close img-replace">Kapat</a>
                    </div> <!-- cd-popup-container -->
                </div> <!-- cd-popup -->

             </div>
         <% } %>
        </div>
     </div>
</body>
</html>

<!--Silme işlemi için Popup Kodları-->
